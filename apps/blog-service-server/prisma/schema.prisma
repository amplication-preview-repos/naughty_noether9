datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Comment {
  author    String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  post      Post?    @relation(fields: [postId], references: [id])
  postId    String?
  text      String?
  updatedAt DateTime @updatedAt
}

model Post {
  author      String?
  comments    Comment[]
  content     String?
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  publishedAt DateTime?
  title       String?
  updatedAt   DateTime  @updatedAt
}
